<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="@dimen/btn_radius"
                android:bottomLeftRadius="@dimen/btn_radius"
                android:topLeftRadius="@dimen/btn_radius"
                android:topRightRadius="@dimen/btn_radius"/>
            <solid android:color="@color/color_transparent_black"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="@dimen/btn_radius"
                android:bottomLeftRadius="@dimen/btn_radius"
                android:topLeftRadius="@dimen/btn_radius"
                android:topRightRadius="@dimen/btn_radius"/>
            <solid android:color="@color/color_transparent_dark_black"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="@dimen/btn_radius"
                android:bottomLeftRadius="@dimen/btn_radius"
                android:topLeftRadius="@dimen/btn_radius"
                android:topRightRadius="@dimen/btn_radius"/>
            <solid android:color="@color/color_transparent_dark_black"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="@dimen/btn_radius"
                android:bottomLeftRadius="@dimen/btn_radius"
                android:topLeftRadius="@dimen/btn_radius"
                android:topRightRadius="@dimen/btn_radius"/>
            <solid android:color="@color/color_transparent_black"/>
        </shape>
    </item>
</selector>